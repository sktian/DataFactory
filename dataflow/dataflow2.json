{
	"name": "dataflow2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "OrderLines",
					"description": "OrderLines Dataset"
				},
				{
					"name": "source2"
				},
				{
					"name": "source3"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "join1"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 100,",
				"     wildcardPaths:['Sales.Orderlines.txt']) ~> OrderLines",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false) ~> source2",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     wildcardPaths:['Application.People.txt']) ~> source3",
				"OrderLines, source2 join(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1"
			]
		}
	}
}