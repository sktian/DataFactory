{
	"name": "OLTP_ODS",
	"properties": {
		"activities": [
			{
				"name": "For Tables",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.TableList",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy Table to ODS",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "SqlServerSource",
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "SqlServerSink",
									"writeBehavior": "insert",
									"sqlWriterUseTableLock": false,
									"tableOption": "autoCreate"
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "WWI",
									"type": "DatasetReference",
									"parameters": {
										"TableName": {
											"value": "@last(split(item(), '.'))",
											"type": "Expression"
										},
										"SchemaName": {
											"value": "@first(split(item(), '.'))",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "WWI_ODS",
									"type": "DatasetReference",
									"parameters": {
										"SchemaName": "@first(split(item(), '.'))",
										"TableName": {
											"value": "@last(split(item(), '.'))",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"TableList": {
				"type": "array",
				"defaultValue": [
					"Sales.Orders",
					"Sales.Orderlines",
					"Sales.Invoices",
					"Sales.Customers",
					"Application.People",
					"Warehouse.StockItems",
					"Warehouse.PackageTypes"
				]
			}
		},
		"annotations": []
	}
}